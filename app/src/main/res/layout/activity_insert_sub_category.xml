<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@drawable/bg7"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".InsertSubCategoryActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add New Product"
        android:textSize="20sp"
        android:textColor="#613e3b"
        android:textStyle="bold"
        android:padding="9dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="9dp"
        android:paddingVertical="9dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CakeName"
            android:textSize="20sp"
            android:layout_marginEnd="5dp"
            android:textColor="#613e3b"
            android:textStyle="bold"
            android:layout_weight="0"
            />
        <EditText
            android:id="@+id/et_sub_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:layout_weight="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="9dp"
        android:paddingVertical="9dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ImageName"
            android:textSize="20sp"
            android:layout_marginEnd="5dp"
            android:textColor="#613e3b"
            android:textStyle="bold"
            android:layout_weight="0"
            />
        <EditText
            android:id="@+id/et_subCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginStart="5dp"
            android:textSize="21dp"
            android:layout_weight="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="9dp"
        android:paddingVertical="9dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="20sp"
            android:layout_marginEnd="5dp"
            android:textColor="#613e3b"
            android:textStyle="bold"
            android:layout_weight="0"
            />
        <EditText
            android:id="@+id/et_subCategoryPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:layout_weight="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="9dp"
        android:paddingVertical="9dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="category Id"
            android:textSize="20sp"
            android:layout_marginEnd="5dp"
            android:textColor="#613e3b"
            android:textStyle="bold"
            android:layout_weight="0"
            />
        <EditText
            android:id="@+id/et_category_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:layout_weight="0"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="1.For Birthday Cake\n2.For Anniversary cake\n3.For Sugar Free\n4.For Farali Cake\n5.For Eggless Cake"/>



    <Button
        android:id="@+id/btn_Insert_Product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="19dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/teal_700"
        android:text="Insert Cake"
        />

</LinearLayout>