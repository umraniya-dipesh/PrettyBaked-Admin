<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@drawable/bg2"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".EditActivity.EditUserActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Edit User Details"
        android:textSize="25dp"
        android:textColor="#613e3b"
        android:textStyle="bold"
        android:padding="9dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="9dp"
        android:paddingVertical="9dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25dp"
            android:layout_marginEnd="5dp"
            android:textColor="#613e3b"
            android:textStyle="bold"
            android:layout_weight="0"
            />
        <EditText
            android:id="@+id/et_username" android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginStart="5dp"
            android:textSize="21sp"
            android:layout_weight="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="9dp"
        android:paddingVertical="9dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="25dp"
            android:layout_marginEnd="5dp"
            android:textColor="#613e3b"
            android:textStyle="bold"
            android:layout_weight="0"
            />
        <EditText
            android:id="@+id/et_useremail" android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginStart="5dp"
            android:textSize="21dp"
            android:layout_weight="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="9dp"
        android:paddingVertical="9dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mobile"
            android:textSize="25dp"
            android:layout_marginEnd="5dp"
            android:textColor="#613e3b"
            android:textStyle="bold"
            android:layout_weight="0"
            />
        <EditText
            android:id="@+id/et_usermobile" android:enabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginStart="5dp"
            android:textSize="21sp"
            android:layout_weight="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="9dp"
        android:paddingVertical="9dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="25dp"
            android:layout_marginEnd="5dp"
            android:textColor="#613e3b"
            android:textStyle="bold"
            android:layout_weight="0"
            />
        <EditText
            android:id="@+id/et_usergender" android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginStart="5dp"
            android:textSize="21sp"
            android:layout_weight="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="9dp"
        android:paddingVertical="9dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="25dp"
            android:layout_marginEnd="5dp"
            android:textColor="#613e3b"
            android:textStyle="bold"
            android:layout_weight="0"
            />
        <EditText
            android:id="@+id/et_useraddress" android:enabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginStart="5dp"
            android:textSize="21sp"
            android:lines="2"
            android:maxLines="3"
            android:layout_weight="0"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="19dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/teal_700"
        android:text="submit"
        />

</LinearLayout>